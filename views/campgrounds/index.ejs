<% include ../partials/header %>

<div class="container">
  <header class="jumbotron mt-1">
    <div class="container">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world.</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">
          Add New Campground</a
        >
      </p>
    </div>
  </header>

  <div class="row text-center">
    <div class="card-columns">
      <% campgrounds.forEach((campground) => { %>
      <div class="card">
        <!-- Privacy Badger breaks unsplash images -->
        <img
          src="<%= campground.image %>"
          class="card-img-top"
          alt="<%= campground.name %>
            - Photo not loading? The Privacy Badger extension
            often blocks photos from unsplash. Try modifying your settings."
        />
        <div class="card-body">
          <h5 class="card-title"><%= campground.name %></h5>
          <a href="/campgrounds/<%= campground.id %>" class="btn btn-primary"
            >More Info</a
          >
        </div>
      </div>
      <% }); %>
    </div>
  </div>
</div>

<% include ../partials/footer %>
